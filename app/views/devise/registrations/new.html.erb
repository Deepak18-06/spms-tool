<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
              <h2 class="fw-bold mb-2 text-uppercase">SPMS</h2>
              <h3 class="fw-bold mb-2 text-uppercase">Sign up</h3>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>

                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-outline form-white mb-4">
                  <label class="form-label" for="typeEmailX">Email</label>
                  <%= f.email_field :email, class: "form-control form-control-lg", id: "typeEmailX", required: true,autofocus: true %>
                </div>

                <div class="form-outline form-white mb-4">
                  <label class="form-label" for="typePasswordX">Password</label>
                  <%= f.password_field :password, class: "form-control form-control-lg", id: "typePasswordX", required: true %>
                </div>

                <div class="form-outline form-white mb-4">
                  <label class="form-label" for="typePasswordConfirmationX">Confirm Password</label>
                  <%= f.password_field :password_confirmation, class: "form-control form-control-lg", id: "typePasswordConfirmationX", required: true %>
                </div>
                <div class="form-outline form-white mb-4">
                  <%= f.label :first_name, class: "form-label" %>
                  <%= f.text_field :first_name, class: "form-control form-control-lg", required: true %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :last_name, class: "form-label" %>
                  <%= f.text_field :last_name, class: "form-control form-control-lg", required: true %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :phone, class: "form-label" %>
                  <%= f.text_field :phone, class: "form-control form-control-lg", required: true %>
                </div>


                <button class="btn btn-outline-light btn-lg px-5 bg-primary" type="submit">Sign up</button>
              <% end %>
            </div>

            <div>
              <p class="mb-0">Already have an account?</p>
            </div>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
