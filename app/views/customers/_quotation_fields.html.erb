<div class="nested-fields border border-dashed border-primary rounded p-3 mb-3">
    <div class="row">
        <div class="col-md-3">
            <%= f.date_field :date, class: "form-control" %>
        </div>
        <div class="col-md-3">
            <%= f.file_field :attachment, class: "form-control", accept: 'application/pdf, application/zip,application/vnd.openxmlformats-officedocument.wordprocessingml.document' %>
        </div>
        <div class="col-md-3">
            <%= f.text_field :comment, class: "form-control"%>
        </div>
        <div class="col-md-3" style="margin-top: 20px;">
            <%= link_to_remove_association "Remove Quotation", f, class: "btn btn-danger mt-2" %>
        </div>
    </div>
</div>
