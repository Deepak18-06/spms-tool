<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @customer %>

  <div class="row">
    <div class="col-md-2">
      <%= link_to "Edit this customer", edit_customer_path(@customer), class: "btn btn-primary btn-block" %>
    </div>
    <div class="col-md-2">
      <%= link_to "Back to customers", customers_path, class: "btn btn-secondary btn-block" %>
    </div>
    <div class="col-md-2">
      <%= button_to "Delete this customer", @customer, method: :delete , class: "btn btn-danger btn-block" %>
    </div>
  </div>
</div>
