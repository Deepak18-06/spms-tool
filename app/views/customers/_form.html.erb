<%= bootstrap_form_for(@customer) do |form| %>
  <% if @customer.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @customer.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <%= form.text_field :first_name, class: "form-control", placeholder: "First Name" %>
    </div>
    <div class="col-md-6">
      <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= form.text_field :phone, class: "form-control", placeholder: "Phone" %>
    </div>
    <div class="col-md-6">
      <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h3>Quotation Information</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form.fields_for :quotations do |quotation_fields| %>
        <%= render 'quotation_fields', f: quotation_fields %>
      <% end %>
    </div>
    <div class="col-md-12">
      <%= link_to_add_association 'Add Quotation', form, :quotations, class: 'btn btn-secondary btn-sm mt-2' %>
    </div>
  </div>


  <div class="text-center mt-3">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
